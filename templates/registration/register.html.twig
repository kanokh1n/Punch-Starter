{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <style>
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Выравниваем по вертикали по центру */
        }

        .card {
            width: 100%; /* Ширина карточки */
            max-width: 400px; /* Максимальная ширина карточки */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f0f0f0;
            padding: 10px 0;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: center; /* Центрируем содержимое по горизонтали */
        }

        .form-group.password-input {
            text-align: center; /* Центрируем содержимое по горизонтали */
        }

        .btn-primary {
            width: 100%;
        }
    </style>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Регистрация</h4>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('app_registration') }}" method="POST">
                            {{ form_start(registrationForm) }}
                            <div class="form-group">
                                {{ form_label(registrationForm.login) }}
                                {{ form_widget(registrationForm.login, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.login) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.email) }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>
                            <div class="form-group password-input">
                                {{ form_widget(registrationForm.passwordHash, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(registrationForm.passwordHash) }}
                            </div>
                            {{ form_end(registrationForm) }}
                            <button type="submit" class="btn btn-primary mt-3">Зарегистрироваться</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}