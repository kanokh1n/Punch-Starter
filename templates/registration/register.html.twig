{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block navbar %}
    <div class="navBar">
        <h2>Регистрация</h2>
    </div>
{% endblock %}

{% block content %}
    <main>
        {% for flash_error in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_start(registrationForm) }}
        {{ form_widget(registrationForm.email, {
            'attr': {'placeholder': 'Введите почту', 'class': 'full-width'}
        }) }}
        {{ form_widget(registrationForm.plainPassword, {
            'attr': {'placeholder': 'Введите пароль', 'class': 'full-width'}
        }) }}
        {{ form_widget(registrationForm.fio, {
            'attr': {'placeholder': 'Введите ФИО', 'class': 'full-width'}
        }) }}
        <button class="btnPurp btn-lg btn-primary" type="submit">Регистрация</button>
        {{ form_end(registrationForm) }}
    </main>
{% endblock %}

